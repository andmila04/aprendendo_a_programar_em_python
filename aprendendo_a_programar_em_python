      ],
      "metadata": {
        "id": "ZEjh4ho7tFdf"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "fat = 45000\n",
        "custo = 23500\n",
        "lucro = fat - custo\n",
        "margem = lucro / fat\n",
        "print(f'Lucro: R${lucro:,.2f}, Margem : {margem: .0%}')"
